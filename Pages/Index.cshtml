@page
@using DevExtremeAspNetCoreApp3.Models

<h2 class="content-block">Home</h2>

@(Html.DevExtreme().DataGrid<DevExtremeAspNetCoreApp3.Models.EF.Student>()
    .DataSource(ds => ds.Mvc()
        .Controller("Students")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("StudentId")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.StudentId);

        columns.AddFor(m => m.Surename);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Course);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)